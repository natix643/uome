<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Uome" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionModeBackground">@color/primary</item>

        <item name="android:textColorLink">@color/accent</item>

        <item name="spinnerStyle">@style/Spinner</item>

        <item name="alertDialogTheme">@style/Theme.Uome.Dialog</item>
        <item name="android:dialogTheme">@style/Theme.Uome.Dialog</item>
    </style>

    <style name="Theme.Uome.NoActionBar" parent="@style/Theme.Uome">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Uome.NoActionBarShadow" parent="@style/Theme.Uome">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Uome.HomeAsCross" parent="@style/Theme.Uome">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_close</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_navigation_close</item>
    </style>

    <style name="Theme.Uome.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>